<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="module_report">

            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                <t t-foreach="docs" t-as="o">

                        <div class="page">
                            
                            <style>
                                .report-container {
                                    width: 1000px;
                                    margin: 0px auto;
                                }
                                .report-header img {
                                    width: 150px;
                                    display: block;
                                    margin: 0px auto;
                                }
                                .report-body {
                                    width: 100%;
                                    float: left;
                                }
                                .report-body h2 {
                                    text-align: center;
                                    margin: 25px 0px;
                                    border: 1px solid #000;
                                    padding: 10px 0px;
                                    background: #aaa;
                                    color: #FFF;
                                }
                                .intro-head {
                                    width: 100%;
                                    border: 1px solid #000;
                                    float: left;
                                }
                                .clearfloat {
                                    float: none;
                                    display: block;
                                    padding: 0px;
                                    margin: 0px;
                                }
                                .in-heads {
                                    width: 33%;
                                    float: left;
                                    border-right: 1px solid #000;
                                }
                                .in-heads p {
                                    margin: 5px 0px;
                                    padding: 0px 0px 0px 25px;
                                    text-align: center;
                                }
                                .last-child {
                                    border: none;
                                }
                                .intro-body {
                                    width: 100%;
                                    border: 1px solid #000;
                                    float: left;
                                    border-top: none;
                                }
                                table {
                                    border: 1px solid #000;
                                    margin: 30px 0px 0px;
                                    width: 100%;
                                    float: left;
                                    border-spacing: 0px;
                                }
                                table tr th,
                                table tr td {
                                    border-right: 1px solid #000;
                                    text-align: center;
                                }
                                table tr th {
                                    padding: 10px 0px;
                                }
                                table tr td {
                                    border-top: 1px solid #000;
                                    padding: 5px 0px;
                                }
                                table tr th:last-child,
                                table tr td:last-child {
                                    border-right: none; 
                                }
                                .report-totals {
                                    width: 100%;
                                    margin: 30px 0px 0px;
                                    float: left;
                                    border-bottom: 1px solid #000;
                                    padding: 0px 0px 20px;
                                }
                                .total-heads,
                                .total-values {
                                    width: 180px;
                                    float: left;
                                }
                                .total-heads p,
                                .total-values p {
                                    margin: 10px 0px 0px;
                                }
                                .total-heads p {
                                    font-weight: bold;
                                }
                                .report-footer {
                                    width: 100%;
                                    float: left;
                                    margin: 5px 0px 0px;
                                }
                                .report-footer .total-heads,
                                .report-footer .total-values {
                                    width: 500px;
                                }
                                .report-footer .total-values p,
                                .report-footer .total-heads p {
                                    margin: 0px 0px 10px;
                                }
                                .report-footer .total-heads p {
                                    text-align: left;
                                }
                                .report-footer .total-values p {
                                    text-align:  right;
                                    padding: 0px 30px 0px 0px;
                                }
                                p.price {
                                    border-bottom: 1px solid #000;
                                    border-top:  1px solid #000;
                                    padding: 5px 30px 5px 0px !important;
                                }
                            </style>

                            <div class="report-container">

                                <div class="report-header">
                                    <img src="/costing_report/static/src/img/logo.jpg" alt="" />
                                </div>

                                <div class="report-body">
                                    <h2>COST CALCULATION SHEET</h2>
                                </div>

                                <div class="intro">
                                    
                                    <div class="intro-head">
                                        
                                        <div class="in-heads">
                                            <p>Date</p>
                                        </div>

                                        
                                        <div class="in-heads">
                                            <p>Model</p>
                                        </div>

                                        
                                        <div class="in-heads last-child">
                                            <p>Customer</p>
                                        </div>
                                        <br class="clearfloat" />

                                    </div>
                                    
                                    <div class="intro-body">
                                        
                                        <div class="in-heads">
                                            <p><span t-esc="o.prototype_order_date"></span></p>
                                        </div>

                                        
                                        <div class="in-heads">
                                            <p><span t-esc="o.prod_name"></span></p>
                                        </div>

                                        
                                        <div class="in-heads last-child">
                                            <p><span t-esc="o.prototype_customer_name.name"></span></p>
                                        </div>
                                    </div>

                                </div>
                                
                                <t t-foreach="heads" t-as="p">

                                    <table>
                                        <tr>
                                            <th><span t-esc="p" style="text-transform: uppercase"></span></th>
                                            <t t-set="record_name" t-value="p" />
                                            <t t-set="total" t-value="0" />
                                            <span t-esc="record_iteration(record_name)"></span>
                                            <th>RATE</th>
                                            <th>UNIT</th>
                                            <th>PAIR</th>
                                            <th>CONSUMPTION</th>
                                            <th>COST</th>
                                            <th>REMARKS</th>
                                        </tr>

                                        <t t-foreach="record_list" t-as="data">
                                            <tr>
                                                <td><span t-esc="data.product.name"></span></td>
                                                <td><span t-esc="data.rate"></span></td>
                                                <td><span t-esc="data.unit.name"></span></td>
                                                <td><span t-esc="data.pair"></span></td>
                                                <td><span t-esc="data.consumption"></span></td>
                                                <td>
                                                    <span t-esc="data.cost"></span>
                                                    <t t-set="total" t-value="total+data.cost" />
                                                </td>
                                                <td><span t-esc="data.remarks"></span></td>
                                            </tr>
                                        </t>
                                            <tr>
                                                <td colspan='5'>Total</td>
                                                <td><span t-esc="total"></span></td>
                                                <td></td>
                                            </tr>
                                    </table>

                                </t>

                                <div class="report-totals">
                                    
                                    <div class="total-heads">
                                        <p>TOTAL OUTERSHELL</p>
                                        <p>TOTAL INNERSHELL</p>
                                        <p>TOTAL ACCESSORIES</p>
                                        <p>TOTAL MFG</p>
                                        <p>Freight</p>
                                    </div>
                                    
                                    <div class="total-values">
                                        <p><span t-esc="outter_cost()"></span></p>
                                        <p><span t-esc="inner_cost()"></span></p>
                                        <p><span t-esc="access_cost()"></span></p>
                                        <p><span t-esc="makery_cost()"></span></p>
                                        <p><span t-esc="o.freight"></span></p>
                                    </div>
                                    <br class="clearfloat" />

                                </div>

                                <div class="report-footer">
                                    
                                    <div class="total-heads">
                                        <p>TOTAL</p>
                                        <p>Markup 25%</p>
                                        <p class="price">Price</p>
                                        <p>Dollar@ 100</p>
                                    </div>
                                    
                                    <div class="total-values">
                                        <p><span t-esc="total_cost()"></span></p>
                                        <p><span t-esc="(total_cost()*25)/100"></span></p>
                                        <p class="price"><span t-esc="total_cost()+((total_cost()*25)/100)"></span></p>
                                        <p><span t-esc="(total_cost()+((total_cost()*25)/100))/100"></span></p>
                                    </div>

                                </div>

                            </div>
                            
                        </div><!--end of page-->
                    </t>
                </t>
            </t>

        </template>

    </data>

</openerp>